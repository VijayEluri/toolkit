<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
  version="2.4">

  <display-name>ImageStore</display-name>

  <!-- Specify Spring config locations, used by ContextLoaderListener -->
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>/WEB-INF/applicationContext.xml</param-value>
  </context-param>
  
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>

  <filter>
    <filter-name>Session Request Binder</filter-name>
    <filter-class>org.springframework.orm.hibernate.support.OpenSessionInViewFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>Session Request Binder</filter-name>
    <!--    <url-pattern>/*</url-pattern>-->
    <servlet-name>images</servlet-name>
  </filter-mapping>

  <servlet>
    <servlet-name>images</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet>
    <display-name>login</display-name>
    <servlet-name>login</servlet-name>
    <servlet-class>com.trailmagic.user.ui.LoginServlet</servlet-class>
  </servlet>

  <servlet>
    <display-name>display</display-name>
    <servlet-name>display</servlet-name>
    <servlet-class>com.trailmagic.image.ui.DisplayServlet</servlet-class>
  </servlet>

  <servlet>
    <display-name>groups</display-name>
    <servlet-name>groups</servlet-name>
    <servlet-class>com.trailmagic.image.ui.GroupServlet</servlet-class>
  </servlet>

  <servlet>
    <display-name>edit-add</display-name>
    <servlet-name>edit-add</servlet-name>
    <servlet-class>com.trailmagic.image.ui.EditAddServlet</servlet-class>
  </servlet>
  
  <servlet>
    <display-name>delete</display-name>
    <servlet-name>delete</servlet-name>
    <servlet-class>com.trailmagic.image.ui.DeleteServlet</servlet-class>
  </servlet>

  <servlet>
    <display-name>mfDisplay</display-name>
    <servlet-name>mfDisplay</servlet-name>
    <servlet-class>com.trailmagic.image.ui.ImageMFDisplayServlet</servlet-class>
  </servlet>

  <servlet>
    <display-name>manifestation</display-name>
    <servlet-name>manifestation</servlet-name>
    <servlet-class>com.trailmagic.image.ui.ImageMFServlet</servlet-class>
  </servlet>

  
  <!-- Servlet Mappings -->

  <servlet-mapping>
    <servlet-name>images</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>display</servlet-name>
    <url-pattern>/old/display/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>mfDisplay</servlet-name>
    <url-pattern>/old/mf/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>delete</servlet-name>
    <url-pattern>/old/delete</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>edit-add</servlet-name>
    <url-pattern>/old/edit</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>manifestation</servlet-name>
    <url-pattern>/old/manifestation/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>groups</servlet-name>
    <url-pattern>/old/groups/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>display</servlet-name>
    <url-pattern>/old/</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  
  <resource-ref>
    <description>DB Connection</description>
    <res-ref-name>jdbc/trailmagic</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

  <security-constraint>
    <display-name/>
    <web-resource-collection>
      <web-resource-name>secure-stuff</web-resource-name>
      <url-pattern>/*edit</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>everyone</role-name>
    </auth-constraint>
    <!--
    <user-data-constraint>
    </user-data-constraint>
-->
  </security-constraint>

  <login-config>
    <auth-method>FORM</auth-method>
    <realm-name>ImageStore</realm-name>
    <form-login-config>
      <form-login-page>/login</form-login-page>
      <form-error-page>/login</form-error-page>
    </form-login-config>
  </login-config>

</web-app>
