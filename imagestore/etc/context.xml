<!DOCTYPE context>
<Context path="/images">
  <Resource name="jdbc/trailmagic" scope="Shareable"
    type="javax.sql.DataSource" auth="Container" username="trailmagic"
    password="password" driverClassName="org.postgresql.Driver"
    url="jdbc:postgresql://localhost/trailmagic"
    maxWait="3000" maxIdle="100" maxActive="10"/>

  <Realm className="org.apache.catalina.realm.JAASRealm"
    appName="ImageStore"
    userClassNames="com.trailmagic.user.UserPrincipal"
    roleClassNames="com.trailmagic.user.GroupPrincipal"/>
</Context>
