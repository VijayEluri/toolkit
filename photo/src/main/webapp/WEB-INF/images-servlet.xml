      <ref local="albumControllerTarget"/>
    </property>
    <property name="interceptorNames">
      <list>
        <value>hibernateInterceptor</value>
      </list>
    </property>
  </bean>
  -->
  
  <bean id="setPreviewImageController"
    class="com.trailmagic.image.ui.SetPreviewImageController">
    <constructor-arg ref="imageService"/>
  </bean>
  
  <bean id="imageMetadataEditController" class="com.trailmagic.image.ui.ImageMetadataEditController">
    <constructor-arg ref="imageRepository"/>
    <property name="commandName" value="image" />
    <property name="commandClass" value="com.trailmagic.image.Image" />
	<property name="formView" value="imageDisplay" />
    <property name="successView" value="imageDetails" />
  </bean>
  
  <bean id="imageDisplayController" class="com.trailmagic.image.ui.ImageDisplayController">
    <constructor-arg ref="imageRepository"/>
    <constructor-arg ref="imageGroupRepository"/>
    <constructor-arg ref="imageSecurityService" />
    <constructor-arg ref="webRequestTools"/>
    <property name="commandName" value="image" />
    <property name="commandClass" value="com.trailmagic.image.Image" />
    <property name="formView" value="imageDisplay" />
    <property name="successView" value="imageDisplay" />
  </bean>
  
  <bean id="imageGroupDisplayController" class="com.trailmagic.image.ui.ImageGroupDisplayController">
    <constructor-arg ref="imageGroupRepository"/>
    <constructor-arg ref="imageSecurityService"/>
    <constructor-arg ref="userFactory"/>
    <constructor-arg ref="webRequestTools"/>
  </bean>
</beans>